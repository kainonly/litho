{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "plugins": [
        "@typescript-eslint",
        "import"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.lib.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "bit",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "bit",
            "style": "kebab-case"
          }
        ],
        "import/no-duplicates": "error",
        "import/no-unused-modules": "error",
        "import/no-unassigned-import": "error",
        "import/order": [
          "error",
          {
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": false
            },
            "newlines-between": "always",
            "groups": [
              "external",
              "builtin",
              "internal",
              [
                "parent",
                "sibling",
                "index"
              ]
            ],
            "pathGroups": [
              {
                "pattern": "{@angular/**,rxjs,rxjs/operators}",
                "group": "external",
                "position": "before"
              }
            ],
            "pathGroupsExcludedImportTypes": []
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {}
    }
  ]
}
